[user]
    name = Anton Romanovich
    email = anthony.romanovich@gmail.com
[color]
    ui = auto
[color "branch"]
    current = red
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    excludesfile = ~/dotfiles/git-global-ignore
[alias]
    tree = log --graph --pretty=oneline --abbrev-commit
    undo = reset --soft HEAD^
    st = status
    ci = commit
    co = checkout
    br = branch
[init]
    templatedir = ~/dotfiles/git-template
